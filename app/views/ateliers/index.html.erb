

<div class ="titre text-center">
Serigraphies à Paris
</div>

<p>22 ateliers</p>

   <div class="main-container">
    <div class="list-cards">
    <% @ateliers.each do |atelier| %>
      <div class ="card">
        <%# <img src="https://source.unsplash.com/random/?sig=${Math.random()}" id="img"> %>
        <%= cl_image_tag atelier.photo.key, height: 300, width:400, crop :fill
        <div class="style-name"><%= atelier.name %>
        </div>
        <div class="style-details"><%= atelier.details %>
       </div>

          <div class="price-left">
            <%= atelier.price_per_day %>€/jour
            <p>
            <%= link_to "Show atelier", ateliers_path %>
            </p>
          </div>
      </div>
    <% end %>
  </div>
