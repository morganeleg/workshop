<div class="container">

  <div class="row header">
    <h1 class="title"><%= @atelier.name %></h1>
    <p><%= @atelier.style %></p>
    <p class="strong"><%= @atelier.address %></p>
  </div>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @atelier.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= "active" if index == 0 %>">
              <%= cl_image_tag photo.key, class:"d-block w-100" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

  <div class="row container-details">

    <div class="col-12 col-md-6 details">
      <h3 class="title">Détails</h3>
      <p><%= @atelier.details %></p>
    </div>

    <div class="col-12 col-md-6 card_reservation">
         <h4>Prix par jour : <span class="strong"><%= @atelier.price_per_day %>€</span></h4>
          <%= simple_form_for [@atelier, @reservation] do |f| %>
            <%= f.input :start_date%>
            <%= f.input :end_date%>
            <% if @atelier.user == current_user %>
              <%= f.button :submit, class: "button disabled"%>
            <% else %>
              <%= f.button :submit, class: "button"%>
            <% end %>
          <% end %>




    </div>

  </div>

</div>
