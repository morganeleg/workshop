<div class="container">

  <div class="row header">
    <h1 class="title"><%= @atelier.name %></h1>
    <p><%= @atelier.style %></p>
    <p class="strong"><%= @atelier.address %></p>
  </div>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @atelier.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= "active" if index == 0 %>">
              <%= cl_image_tag photo.key, class:"d-block w-100" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

  <div class="row container-details">

    <div class="col-12 col-md-6 details">
      <h3 class="title">Détails</h3>
      <p><%= @atelier.details %></p>
    </div>

    <div class="col-12 col-md-6 card_reservation">

      <h4>Prix par jour : <span class="strong"><%= @atelier.price_per_day %>€</span></h4>

      <div class="dates">
        <div class="start_date">
        <p>ARRIVEE</p>
        <p class="strong">22/05/2024</p>
        </div>
        <div class="end_date">
        <p>DEPART</p>
        <p class="strong">22/05/2024</p>
        </div>
      </div>

      <div class="total">
        <div>
        <p>TOTAL</p>
        </div>
        <div>
        <p class="strong"><%= @atelier.price_per_day %>€</p>
        </div>
      </div>

      <a href="" class="btn">Réservation</a>

    </div>

  </div>

</div>
